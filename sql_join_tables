DROP TABLE cats
DROP TABLE owners;
DROP TABLE cats_owners;

sqlite3 pets_database.db

CREATE TABLE cats (
id INTEGER PRIMARY KEY,
name TEXT,
age INTEGER,
breed TEXT
);

CREATE TABLE owners (id INTEGER PRIMARY KEY, name TEXT);

INSERT INTO owners (name) VALUES ("mugumogu");
