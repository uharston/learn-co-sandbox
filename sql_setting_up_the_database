.headers on 
.mode column 

SELECT cats.name, cats.breed, owners.name AS "owner_name"
FROM cats
INNER JOIN owners
ON cats.owner_id = owners.id; 



SELECT cats.name AS 'kitty_name', cats.breed, owners.name 
AS "owner_name"
FROM cats
LEFT OUTER JOIN owners
ON cats.owner_id = owners.id; 
