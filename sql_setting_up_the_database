sqlite3 pets_database.db

CREATE TABLE cats (
id INTEGER PRIMARY KEY,
name TEXT,
age INTEGER,
breed TEXT,
owner_id INTEGER);

CREATE TABLE owners (id INTEGER PRIMARY KEY, name TEXT);



